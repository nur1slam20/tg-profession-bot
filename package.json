{
  "name": "tg-profession-bot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "setup:sqlite": "echo 'DATABASE_URL=file:./dev.db' > .env && echo 'BOT_TOKEN=your_bot_token_here' >> .env && echo 'PORT=3000' >> .env",
    "dev:sqlite": "npm run setup:sqlite && npx prisma generate && npx prisma migrate dev --name init && npm run db:seed && npm run dev",
    "postinstall": "npx prisma generate && npx prisma migrate deploy && npm run db:seed"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "grammy": "^1.31.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "prisma": "^5.18.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}